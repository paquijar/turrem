            code=$("#codigo").val();
            passNueva=$("#contraNueva").val();
            passConfirm=$("#contraConfirm").val();
            if (passNueva === passConfirm){
                $.post("http://localhost:8083/recuperar",{code: code, passNueva: passNueva, passConfirm: passConfirm}, function(data){
                    if(data!="0")
                    {
                        alert("la contraseña fue actualizada satisfactoriamente");
                        document.location.href = "http://localhost:8083/";
                    }
                    else {
                        alert("el codigo de recuperacion no coincide");
                    }
                });
            }
            else {
                alert("la nueva contraseña y la confirmación de contraseña no coinciden");
            }
        });
      });

    </script>

